{
    "manifest_version": 3,
    "name": "local ollama prompt",
    "version": "1.0",
    "description": "Ollama API를 사용하여 웹 콘텐츠, 이미지, 텍스트를 분석하는 Firefox 확장 기능",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png"
    },
    "action": {
        "default_title": "Ollama Prompt",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts":[
            "src/js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/lib/defuddle.min.js",
                "src/js/content.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html"
    }
}